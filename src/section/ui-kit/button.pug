//- if <a>        link = true
//- if <button>   link = false

mixin button(obj)
    if obj.link == true
        +b('a').button( href=obj.href title=`${obj.content}` )&attributes( attributes ) #{obj.content}
            block

    else
        +b('button').button&attributes( attributes ) #{obj.content}
            block
