mixin header()
    +b('header').header
        .b-container
            +e.__wrapper
                +b('div').logo
                    +e('a').link(href="#" title="home").--home
                        include ../../section/ui-kit/images.pug
                        +images(
                            [
                                {
                                    "srcset": "../../images/logo/logo-desktop-light.svg",
                                    "media": "(min-width: 980px)"
                                }
                            ],
                            source="true",
                            address="../../images/logo/mobile/logo-mobile-light.svg",
                            width="40px",
                            height="40px"
                        ).--logo
                +b('button').burger
                    +e.visual
                +e.__functional
                    +e('a').link(href="#" title="home").--home
                        +e('img').image(src="../../images/logo/mobile/logo-mobile-dark.svg", alt="").__logo
                    +b('button').burger.--close
                        +e.visual
                    include nav.pug
                    +nav()
                    +b.language
                        +e('button').__button
                            | No
                        +e('button').__button.--active
                            | En
                        +e('button').__button
                            | Ru
