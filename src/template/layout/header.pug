                            +e.__item
                                +e('a').link(href="javascript:void(0);" title="").__link
                                    | Projects
                            +e.__item
                                +e('a').link(href="javascript:void(0);" title="").__link
                                    | Services
                            +e.__item
                                +e('a').link(href="javascript:void(0);" title="").__link
                                    | Our team
                            +e.__item
                                +e('a').link(href="javascript:void(0);" title="").__link
                                    | Contacts
                    +b.language
                        +e('button').__button
